@using Bioscoop_Website_2021.Database;
@model List<Film>

<section>
    <div id="Tekst1">
        <h1>Films</h1>
        <p>Welke op onze overzichtspagina! Op deze film kunt u het overzicht van ons gehele aanbod aan films zien. Neem snel een kijkje!</p>
    </div>

    @foreach (Film p in Model)

    {
        <div id="allefilms">
            <div id="Titel"><h2>@p.Titel</h2></div>
            <div id="image"><img src="@p.Img" alt="@p.Titel" /></div>
            <br><br>
            <div id="Beschrijving">@p.Beschrijving</div>
            <p><a href="/film/@p.id"> Lees meer... </a></p>
        </div>
    }
</section>

<style>

    #Tekst1{
        text-align: center;
        font-size: 25px;
    }

    #allefilms {
        margin: auto;
        width: 30%;
        border: 5px solid #000000;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        background-color: #ff8686;
    }

    #allefilms p{
        text-align: center;
        font-size: 20px;
        font-weight: bold;
    }

    #allefilms a {
        color: #000000;
        text-decoration: none;
     }

    #allefilms img {
        width: 150px;
        height: 200px;
    }

    #Titel{
        text-align: center;
    }

    #image {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 40%;
    }

    #Beschrijving{
        font-size: 20px;
    }

    section {
        background-image: linear-gradient(#ffffff, #ff313f, #df2c35, #961111);
        margin-bottom: 0; 
    }


</style>

