@{
    ViewData["Title"] = "Inloggen";
}

@section style{
    <link rel="stylesheet" href="~/css/Inloggen.css" />
}

<div id="Formulier">
    <h1>Log hier in op uw LaMa-bios account! </h1>
    <p>Heeft u nog geen account? Dan kunt u <a href="/Contact">hier</a> klikken. Dan komt u bij ons contactformulier, waar u ook een account op kan aanmaken.</p>

    <form>
        <div id="gebruikersnaam"><p>Gebruikersnaam:</p><input type="text" name="username" /></div> <br />
        <div id="wachtwoord"><p>Wachtwoord:</p><input type="text" name="password" /></div> <br />
        <div id="Versturen"><input type="submit" value="Versturen" /></div> <br />
    </form>
</div>

