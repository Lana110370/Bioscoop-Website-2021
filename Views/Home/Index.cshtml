@model List<string>
@{
    ViewData["Title"] = "Home Page";

}


<div id="hometext">
    <h1>Welkom!</h1>
    <p>Bekijk nu onze nieuwe releases!</p>
    @foreach(string Titel in Model)
    {
        <p>@Titel</p>
    }
</div>

<style>

    #hometext h1 {
        color: #000000;
        text-align: center;
        font-size: 60px;
    }

    #hometext p {
        color: #000000;
        text-align: center;
        font-size: 30px;
    }
</style>
