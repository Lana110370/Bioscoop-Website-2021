@using Bioscoop_Website_2021.Database;
@model List<Film>
@{
    ViewData["Title"] = "Home Page";

}

@section style{
    <link rel="stylesheet" href="~/css/Index.css" />
}

<div id="hometext">
    <h1>Welkom bij de LaMa-Bios!!</h1>
    <p>Bekijk nu onze nieuwe releases!</p>
</div>


@foreach (Film p in Model.Take(5))

{
    <div id="homefilms">
        <div id="titel">
            <h2><a href="/film/@p.id"> @p.Titel</a></h2>
        </div>
        <div id="image"><img src="@p.Img" alt="@p.Titel" /></div>
        <br><br>
        <p><a href="/film/@p.id"> Lees meer... </a></p>
    </div>
}



